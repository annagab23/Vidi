=@item['id']

%hr
Metadata
-@metadata['item'].each do |item|
  =item['metadata']['revesion']
  -item['metadata']['timespan'].each do |timespan|
    %table.table.table-striped
      %tr
        %th
          name
        %th
          value
        %th
          uuid
        %th
          user
        %th
          timestamp
        %th
          change
      -timespan['field'].each do |field|
        %tr
          %td
            =field['name']
          %td
            =field['value'].first['value']
          %td
            =field['uuid']
          %td
            =field['user']
          %td
            =field['timestamp']
          %td
            =field['change']

%hr
SHAPES:
%table.table.table-striped
  %tr
    %th
      id
    %th
      tag
    %th
      mimeType
    %th
      format
    %th
      uri
    %th
      size
  -@shapes.each do |field|
    %tr
      %td
        =field['id']
      %td
        =field['tag']
      %td
        =field['mimeType']
      %td
        =field['containerComponent']['format']
      %td
        =field['containerComponent']['file'].first['uri']
      %td
        =field['containerComponent']['file'].first['size']



%hr
Transcode
=simple_form_for 'job', url: transcode_admin_item_path(@item['id']), method: 'post' do |f|
  =f.input :tag, as: :select, collection: @tags
  =f.submit
