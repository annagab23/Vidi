%h1 Listing collections
=link_to 'new collection',  new_admin_collection_path
.row
  .col-lg-9
    %table.table.table-striped
      %tr
        %th
          id
        %th
          name
        %th
          location
        %th
      - @collections.each do |collection|
        %tr
          %td
            = link_to collection['id'], admin_collection_path(collection['id'])
          %td
            = collection['name']
          %td
            = collection['loc']
          %td
            = link_to "Delete", admin_collection_path(collection['id']), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
            = link_to 'Edit', edit_admin_collection_path(collection['id'])
